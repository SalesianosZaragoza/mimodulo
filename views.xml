<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- add ventas model -->
	<record id="view_ventas_tree" model="ir.ui.view">
		<field name="name">ventas.tree</field>
		<field name="model">ventas</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="fecha"/>
				<field name="cliente"/>
				<field name="producto"/>
				<field name="cantidad"/>
				<field name="precio"/>
				<field name="total"/>
			</tree>
		</field>
	</record>
	<!-- add ventas form -->
	<record id="view_ventas_form" model="ir.ui.view">
		<field name="name">ventas.form</field>
		<field name="model">ventas</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="name"/>
						<field name="fecha"/>
						<field name="cliente"/>
						<field name="producto"/>
						<field name="cantidad"/>
						<field name="precio"/>
						<field name="total"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

</odoo>
